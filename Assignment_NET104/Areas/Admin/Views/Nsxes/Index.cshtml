@model IEnumerable<Assignment_NET104.Models.Nsx>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
           <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
           <a class="breadcrumb-item" href="#">Quản lý Sản Phẩm</a>
           <a class="breadcrumb-item" href="#">Nhà sản xuất</a>
           <span class="breadcrumb-item active">Danh sách NSX</span>
        </nav>
     </div>
</div>
<div>
<p>
    <a class="btn btn-primary btn-tone m-r-5"asp-area="Admin" asp-controller="Nsxes" asp-action="Create" >Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNxs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNxs)
            </td>
            <td>
                <a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="Nsxes" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="Nsxes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-tone m-r-5"asp-area="Admin" asp-controller="Nsxes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
