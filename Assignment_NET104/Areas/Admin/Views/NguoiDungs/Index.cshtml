@model IEnumerable<Assignment_NET104.Models.NguoiDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
           <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
           <a class="breadcrumb-item" href="#">Quản lý Tài Khoản</a>
           <span class="breadcrumb-item active">Danh sách Tai Khoản</span>
        </nav>
     </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Ten Nguoi Dung</th>
                <th scope="col">Ten Dang Nhap</th>
                <th scope="col">Mat Khau</th>
                <th scope="col">Email</th>
                <th scope="col">SDT</th>
                <th scope="col">Trạng Thái</th>
                <th scope="col">VaiTro</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.TenNguoiDung
            </td>
            <td>
               @item.TenDangNhap
            </td>
            <td>
               @item.MatKhau
            </td> 
            <td>
               @item.Email
            </td> 
            <td>
               @item.SDT
            </td> 
            <td>
               @item.TrangThai
            </td> 
            <td>
               @{
                  Assignment_NET104.Models.ShopWatchDbContext db = new Assignment_NET104.Models.ShopWatchDbContext();
                  var vaitro = (db.vaiTros.Find(item.Idvaitro));
                  <span>@vaitro.TenVaiTro</span>
                }
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
