@model IEnumerable<Assignment_NET104.Models.ThuongHieu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
           <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
           <a class="breadcrumb-item" href="#">Quản lý Sản Phẩm</a>
           <a class="breadcrumb-item" href="#">Thương hiệu</a>
           <span class="breadcrumb-item active">Danh sách Thương hiệu</span>
        </nav>
     </div>
</div>
<div>
    <a class="btn btn-primary btn-tone m-r-5"asp-area="Admin" asp-controller="ThuongHieu" asp-action="Create" >Create</a>
</div>
<table class="table">
          <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên Thương hiệu</th>
                <th scope="col">Miêu Tả</th>
               
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                  <tr>
                        <th >@item.Id</th>
                        <td>@item.TenThuongHieu</td>
                        <td>@item.MoTa</td>
                        
                        <td>
                            <a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="ThuongHieu" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                            <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="ThuongHieu" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-tone m-r-5"asp-area="Admin" asp-controller="ThuongHieu" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                  </tr>  
                }
            }
            
           
        </tbody>
</table>

