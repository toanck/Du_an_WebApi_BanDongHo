@model IEnumerable<Assignment_NET104.Models.VaiTro>

@{
    ViewData["Title"] = "Quan ly quyen truy cap";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
           <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
           <a class="breadcrumb-item" href="#">Quản lý Hệ thống</a>
           <a class="breadcrumb-item" href="#">Quản lý quyền truy cập</a>
           <span class="breadcrumb-item active">Danh sách quyền truy cập</span>
        </nav>
     </div>
</div>
<div>
    <a class="btn btn-primary btn-tone m-r-5"asp-area="Admin" asp-controller="Vaitroes" asp-action="Create" >Create</a>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tên Vai Trò</th>
                <th scope="col">Miêu Tả</th>
                <th scope="col">Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                  <tr>
                        <th >@item.Id</th>
                        <td>@item.TenVaiTro</td>
                        <td>@item.MieuTa</td>
                        <td>@item.TrangThai</td>
                        <td>
                            <a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="Vaitroes" asp-action="Details" asp-route-Id="@item.Id">Detail</a>
                            <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="Vaitroes" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                            <a class="btn btn-danger btn-tone m-r-5"asp-area="Admin" asp-controller="Vaitroes" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                        </td>
                  </tr>  
                }
            }
            
           
        </tbody>
    </table>
</div>
