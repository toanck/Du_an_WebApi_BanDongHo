@model Assignment_NET104.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
           <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
           <a class="breadcrumb-item" href="#">Quản lý sản phẩm</a>
           <span class="breadcrumb-item active">Chi tiết sản phẩm</span>
        </nav>
     </div>
</div>
<div class="table-responsive">
   <table class="product-info-table m-t-20">
    <tbody>
        <tr>
            <td>ID:</td>
            <td class="text-dark font-weight-semibold">@Model.Id</td>
        </tr>
        <tr>
            <td>Tên sản phẩm:</td>
            <td>@Model.TenSp</td>
        </tr>
        <tr>
            <td>ID thương hiệu:</td>
            <td>@{
                                Assignment_NET104.Models.ShopWatchDbContext db = new Assignment_NET104.Models.ShopWatchDbContext();
                                var thuonghieus = (db.thuongHieus.Find(Model.IdThuongHieu))  /*.Find(item.IdThuongHieu) XuatSu*/;
                                
                               <span>@thuonghieus.TenThuongHieu</span>
                         }</td>
        </tr>
        <tr>
            <td>Giá sản phẩm:</td>
            <td>@Model.GiaSanPham</td>
        </tr>
        <tr>
            <td>Số lượng tồn:</td>
            <td>@Model.SlTon</td>
        </tr>
        @*<tr>
            <td>Trạng Thái:</td>
            <td>@Model.TrangThai</td>
        </tr>*@
        <tr>
            <td>Giới tính:</td>
            <td>@Model.GioiTinh</td>
        </tr>
        <tr>
            <td>ID xuất sứ:</td>
            <td>@{Assignment_NET104.Models.ShopWatchDbContext db1 = new Assignment_NET104.Models.ShopWatchDbContext();
                                var XuatSus = (db.suatXus.Find(Model.IdXuatSu))  /*.Find(item.IdThuongHieu) LoaiMay*/;
                                
                               <span>@XuatSus.NoiXuatSu</span>}</td>
        </tr>
        <tr>
            <td>ID loại máy:</td>
            <td>@{
                                Assignment_NET104.Models.ShopWatchDbContext db2 = new Assignment_NET104.Models.ShopWatchDbContext();
                                var LoaiMay = (db.loaiMays.Find(Model.IdLoaiMay))  /*.Find(item.IdThuongHieu) Nsx*/;
                                
                               <span>@LoaiMay.TenLoaiMay</span>
                         }</td>
        </tr>
        <tr>
            <td>ID Nhà sản xuất:</td>
            <td>@{
                                Assignment_NET104.Models.ShopWatchDbContext db3 = new Assignment_NET104.Models.ShopWatchDbContext();
                                var Nsx = (db.Nsxes.Find(Model.IdNsx))  /*.Find(item.IdThuongHieu) Nsx*/;
                                
                               <span>@Nsx.TenNxs</span>
                         }</td>
        </tr>
        <tr>
            <td>Thời gian bảo hành:</td>
            <td>@Model.ThoiGianBaoHanh</td>
        </tr>
        <tr>
            <td>Miêu tả:</td>
            <td>@Model.MieuTa</td>
        </tr>
        <tr>
            <td>Hình ảnh:</td>
            <td>
                <img width="200" height="200" src="~/images/@Model.HinhAnh" />
            </td>
        </tr>
    </tbody>
   </table> 
</div>
<div>
     <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="SanPham" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
     <a class="btn btn-warning btn-tone m-r-5" asp-action="Index">Back to List</a>

    
</div>